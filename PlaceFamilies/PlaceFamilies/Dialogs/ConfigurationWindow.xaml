<Window x:Class="PlaceFamilies.Dialogs.ConfigurationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlaceFamilies.Dialogs"
             mc:Ignorable="d" Height="156" Width="453" Title="Configuration" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="The number of instances you want to place in a single line:" Grid.Row="0" Grid.Column="0" Margin="0,10,97,11" Grid.ColumnSpan="2"/>
        <TextBox x:Name="stepTxtBox" Grid.Row="0" Margin="141,13,12,13" Grid.Column="1"/>
        <Button x:Name="okBtn" Content="OK" Grid.Row="1" Margin="135,19,12,6" Grid.Column="1" Width="80" Click="okBtn_Click"/>


    </Grid>
</Window>
